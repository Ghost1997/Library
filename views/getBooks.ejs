<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
    <title>All Books</title>

    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/simple-line-icons.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/templatemo_style.css">
    <style>
    
        .center {
    
    position: absolute;
    top:70%;
    bottom: 0;
    left: 20%;
    right: 0;
      
    margin: auto;
    }
    </style>
</head>

<body>
       <header class="site-header container animated fadeInDown">
        <div class="header-wrapper">
            <div class="row">
                <div class="col-md-4">
                        <a href="<%= process.env.HOST %>/home">
                            <h1>Library</h1>
                        </a>
                    </div>
                <div class="col-md-8">
                    <nav id="nav" class="main-navigation hidden-xs hidden-sm">
                        <ul class="main-menu">
                            <li><a href="<%= process.env.HOST %>/home">Home</a></li>
                            <li><a  href="<%= process.env.HOST %>/addBook">Add Book</a></li>
                            <li><a class="show-1 active" href="<%= process.env.HOST %>/getBooks">All Book</a></li>
                            <li><a  href="<%= process.env.HOST %>/update">Update Stock</a></li>
                            <li><a href="<%= process.env.HOST %>/logout"><i class="fa fa-power-off" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                    <nav id="nav" class="main-navigation menu-responsive hidden-md hidden-lg">
                        <ul class="main-menu">
                            <li><a href="<%= process.env.HOST %>/home">Home</a></li>
                            <li><a  href="<%= process.env.HOST %>/addBook">Add Book</a></li>
                            <li><a class="show-1 active" href="<%= process.env.HOST %>/getBooks">All Book</a></li>
                            <li><a href="<%= process.env.HOST %>/update">Update Stock</a></li>
                            <li><a href="<%= process.env.HOST %>/logout"><i class="fa fa-power-off" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div id="menu-1" class="homepage home-section container">
        <div class="home-intro text-center">
            <h2 class="animated fadeInLeft">ALL BOOKS</h2>  
        </div>
    </div>
                <div class="col-md-10 col-sm-10 center" >
                    <fieldset class="col-md-3 col-sm-3">
                    <form  action="/getByCategory" method="post">
                        <button type="submit" class="btn btn-primary btn-block" name="gener">Books By Gener</button>
                        <br>
                        <select required name="gener" class="form-control">
                            <option disabled selected value>Gener</option>
                            <option>Action and Adventure</option>
                            <option>Anthology</option>
                            <option>Classic</option>
                            <option>Comic and Graphic Novel</option>
                            <option>Crime and Detective</option>
                            <option>Drama</option>
                            <option>Fable</option>
                            <option>Fairy Tale</option>
                            <option>Fantasy</option>
                            <option>Horror</option>
                            <option>Humor</option>
                            <option>Mystery</option>
                            <option>Mythology</option>
                            <option>Realistic Fiction</option>
                            <option>Romance</option>
                            <option>Sci-Fi</option>
                            <option>Short Story</option>
                            <option>Suspense/Thriller</option>
                            <option>Biography/Autobiography</option>
                            <option>Reference Books</option>
                            <option>Self-help Book</option>
                            <option>Speech</option>
                            <option>Textbook</option>
                            <option>Poetry</option>
                            <option>Novel</option>
                        </select>
                    </form>
                </fieldset>
                <fieldset class="col-md-3 col-sm-3">
                    <form action="/getBookById" method="post">
                        <button type="submit" class="btn btn-primary btn-block" name="search">Search Book </button>
                        <br>
                        <input name="id" placeholder="Book Id" type="text" class="form-control" />
                    </form>
                    </fieldset>
                    <fieldset class="col-md-3 col-sm-3">
                    <form  action="/getBookByAuthor" method="post">
                        <button type="submit" class="btn btn-primary btn-block " name="search">Search
                            Book</button>
                        <br>
                        <input name="author" placeholder="Author" type="text" class="form-control" />
                    </form>
                </fieldset>
                </div>
                
           
    <div style="margin-top: 8%;" class="d-flex table-data">
        <table class="table table-striped table-bordered table-light">
            <br>
            <thead style="color:white;">
                <tr>
                    <th>S/No</th>
                    <th>BOOK ID</th>
                    <th>NAME</th>
                    <th>AUTHOR</th>
                    <th>GENER</th>
                    <th>QUANTITY</th>
                    <th>ISSUE DAYS</th>
                    <th>COST</th>
                    

                </tr>
            </thead>
            <% if(data.length){ 
          for(var i = 0;i < data.length;i++) { %>
            <tbody id="tbody" style="color: black;">
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].bookId%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].author%></td>
                    <td><%=data[i].type%></td>
                    <td><%=data[i].qty%></td>
                    <td><%=data[i].issue_days%></td>
                    <td>â‚¹<%=data[i].cost%></td>

                </tr>

                <% }
      }else{ %>
                <tr>
                    <td align="center" colspan="8">No Books Found</td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
    <title>Update Stock</title>

    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/simple-line-icons.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/templatemo_style.css">
</head>

<body>
    <% if (errorMessage) { %>
		<div class="alert alert-warning" style="text-align: center; width: auto;"><%= errorMessage %></div>
	<% } %>
       <header class="site-header container animated fadeInDown">
        <div class="header-wrapper">
            <div class="row">
                <div class="col-md-4">
                        <a href="<%= process.env.HOST %>/home">
                            <h1>Library</h1>
                        </a>
                    </div>
                <div class="col-md-8">
                    <nav id="nav" class="main-navigation hidden-xs hidden-sm">
                        <ul class="main-menu">
                            <li><a href="<%= process.env.HOST %>/home">Home</a></li>
                            <li><a  href="<%= process.env.HOST %>/addBook">Add Book</a></li>
                            <li><a href="<%= process.env.HOST %>/getBooks">All Book</a></li>
                            <li><a class="show-1 active"  href="<%= process.env.HOST %>/update">Update Stock</a></li>
                            <li><a href="<%= process.env.HOST %>/logout"><i class="fa fa-power-off" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                    <nav id="nav" class="main-navigation menu-responsive hidden-md hidden-lg">
                        <ul class="main-menu">
                            <li><a href="<%= process.env.HOST %>/home">Home</a></li>
                            <li><a  href="<%= process.env.HOST %>/addBook">Add Book</a></li>
                            <li><a href="<%= process.env.HOST %>/getBooks">All Book</a></li>
                            <li><a class="show-1 active" href="<%= process.env.HOST %>/update">Update Stock</a></li>
                            <li><a href="<%= process.env.HOST %>/logout"><i class="fa fa-power-off" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div id="menu-1" class="homepage home-section container">
        <div class="home-intro text-center">
            <h2 class="animated fadeInLeft">UPDATE BOOK STOCK</h2>  
        </div>
    </div>
    <div class="container text-center" >
        <div>
            <form action="/search" method="post">
     
            <input name="bookid"name=""  style="width:300px; height: 38px; text-align:center; color: black; " value="<%= value %>" placeholder="Book ID" type="text"/>
            <input type="submit" value="Search Book" style=" height:40px; width: 120px; color: black;" name="searchItem " />
            </form>
            <br> 
            </div>
        </div>
        <% if(condition){ %>
            <div class="d-flex table-data" >
                <table class="table table-striped table-bordered table-light">
                    <br>
                    <thead style="color:white;">
                        <tr>
                            <th>S/No</th>
                            <th>BOOK ID</th>
                            <th>NAME</th>
                            <th>AUTHOR</th>
                            <th>GENER</th>
                            <th>QUANTITY</th>
                            <th>ISSUE DAYS</th>
                            <th>COST</th>
                            
        
                        </tr>
                    </thead>
                    <% if(data.length){ 
                  for(var i = 0;i < data.length;i++) { %>
                    <tbody id="tbody" style="color: black;">
                        <tr>
                            <td><%=(i+1)%></td>
                            <td><%=data[i].bookId%></td>
                            <td><%=data[i].name%></td>
                            <td><%=data[i].author%></td>
                            <td><%=data[i].type%></td>
                            <td><%=data[i].qty%></td>
                            <td><%=data[i].issue_days%></td>
                            <td>â‚¹<%=data[i].cost%></td>
                        </tr>
                        <% }
              }else{ %>
                        <tr>
                            <td align="center" colspan="8">No Books Found</td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <% } %>
        </body>
        <% if(condition) { %>
            <div class="container text-center" style="margin-top:30px;">
                <div>
                    <form action="/update" method="post">
                    <!-- <label>Search</label> -->
                    <input type="hidden" name=bookid value="<%= value %>">
                    <input name="qty" style="width:300px; height: 38px; text-align:center; border-radius:3px;" placeholder="New Quantity" type="text"/>
                    <input type="submit" value="Update Stock" style="height:40px; width: 120px; color: black;" name="searchItem" />
                    </form>
                    <br> 
                    </div>
                </div>
                <% } %>
        <span class="border-top"></span>
            <span class="border-left"></span>
            <span class="border-right"></span>
            <span class="border-bottom"></span>
            <span class="shape-1"></span>
            <span class="shape-2"></span>

            <script src="js/jquery.min.js"></script>
            <script src="js/templatemo_custom.js"></script>
</body>

</html>
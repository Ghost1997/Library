    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/templatemo_style.css">
</head>

<body>
    <% if (errorMessage) { %>
		<div class="alert alert-warning" style="text-align: center; width: auto;"><%= errorMessage %></div>
	<% } %>
       <header class="site-header container animated fadeInDown">
        <div class="header-wrapper">
            <div class="row">
                <div class="col-md-4">
                        <a href="<%= process.env.HOST %>/home">
                            <h1>Library</h1>
                        </a>
                    </div>
                <div class="col-md-8">
                    <nav id="nav" class="main-navigation hidden-xs hidden-sm">
                        <ul class="main-menu">
                            <li><a href="<%= process.env.HOST %>/home">Home</a></li>
                            <li><a href="<%= process.env.HOST %>/add-student">Add
                                    Student</a></li>
                            <li><a href="<%= process.env.HOST %>/searchStudent">Profile</a></li>
                            <li><a  href="<%= process.env.HOST %>/get-students">All Students</a></li>
                            <li><a class="show-1 active"  href="<%= process.env.HOST %>/deleteStudent">Remove Student</a></li>
                            <li><a href="<%= process.env.HOST %>/logout"><i class="fa fa-power-off" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                    <nav id="nav" class="main-navigation menu-responsive hidden-md hidden-lg">
                        <ul class="main-menu">
                            <li><a href="<%= process.env.HOST %>/home">Home</a></li>
                            <li><a href="<%= process.env.HOST %>/add-student">All Student</a></li>
                            <li><a href="<%= process.env.HOST %>/searchStudent">>Profile</a></li>
                            <li><a  href="<%= process.env.HOST %>/get-students">Enrolled Students</a></li>
                            <li><a class="show-1 active" href="<%= process.env.HOST %>/deleteStudent">Remove Student</a></li>
                            <li><a href="<%= process.env.HOST %>/logout"><i class="fa fa-power-off" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div id="menu-1" class="homepage home-section container">
        <div class="home-intro text-center">
            <h2 class="animated fadeInLeft">Remove Student</h2>  
        </div>
    </div>
    <div class="container text-center" >
        <div>
            <form action="/searchstu" method="post">
     
            <input name="stuid"  style="width:300px; height: 38px; text-align:center; color: black; " value="<%= value %>" placeholder="Library No" type="text"/>
            <input type="submit" value="Search Student" style=" height:40px; width: 120px; color: black;" name="searchItem " />
            </form>
            <br> 
            </div>
        </div>
        <% if(condition){ %>
        <div class="d-flex table-data" >
            <table class="table table-striped table-bordered table-light">
                <br>
                <thead>
                    <tr>
                        <th>S/No</th>
                        <th>LIBRARY NO</th>
                        <th>ROLL NO</th>
                        <th>NAME</th>
                        <th>CLASS</th>
                        <th>SECTION</th>
                        <th>GENDER</th>
                        <th>EMAIL</th>
                        <th>ACTION</th>
                        
    
                    </tr>
                </thead>
                <% if(data.length){ 
              for(var i = 0;i < data.length;i++) { %>
                <tbody id="tbody" style="color: black;">
                    <tr>
                        <td><%=(i+1)%></td>
                        <td><%=data[i].lib_no%></td>
                        <td><%=data[i].roll_no%></td>
                        <td><%=data[i].name%></td>
                        <td><%=data[i].std%></td>
                        <td><%=data[i].section%></td>
                        <td><%=data[i].gender%></td>
                        <td><%=data[i].email%></t>
                        <td><form action="/deleteStudent" method="post">
                            <input type="hidden" name=id value="<%= value %>">
                            <input type="submit" value="Remove" style=" height:40px; width: 120px; color: black;" name="Remove" />
                            </form></td>
                    </tr>
                    <% }
          }else{ %>
                    <tr>
                        <td align="center" colspan="9">No Books Found</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <% } %>
    
            <span class="border-top"></span>
            <span class="border-left"></span>
            <span class="border-right"></span>
            <span class="border-bottom"></span>
            <span class="shape-1"></span>
            <span class="shape-2"></span>

            <script src="js/jquery.min.js"></script>
            <script src="js/templatemo_custom.js"></script>
</body>

</html>
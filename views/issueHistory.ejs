<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
    <title>All Student</title>

    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/simple-line-icons.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/templatemo_style.css">
</head>

<body>
       <header class="site-header container animated fadeInDown">
        <div class="header-wrapper">
            <div class="row">
                <div class="col-md-4">
                        <a href="<%= process.env.HOST %>/home">
                            <h1>Library</h1>
                        </a>
                    </div>
                <div class="col-md-8">
                    <nav id="nav" class="main-navigation hidden-xs hidden-sm">
                        <ul class="main-menu">
                            <li><a href="<%= process.env.HOST %>/home">Home</a></li>
                            <li><a  href="<%= process.env.HOST %>/issue">Issue Book</a></li>
                            <li><a  class="show-1 active" href="<%= process.env.HOST %>/issueHistory">Issue History</a></li>
                            <li><a href="<%= process.env.HOST %>/logout"><i class="fa fa-power-off" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                    <nav id="nav" class="main-navigation menu-responsive hidden-md hidden-lg">
                        <ul class="main-menu">
                            <li><a href="<%= process.env.HOST %>/home">Home</a></li>
                            <li><a href="<%= process.env.HOST %>/issue">Issue Book</a></li>
                            <li><a class="show-1 active"href="<%= process.env.HOST %>/issueHistory">Issue History</a></li>
                            <li><a href="<%= process.env.HOST %>/logout"><i class="fa fa-power-off" aria-hidden="true"></i></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div id="menu-1" class="homepage home-section container">
        <div class="home-intro text-center">
            <h2 class="animated fadeInLeft">Issue History</h2>  
        </div>
        <form style="margin-left: 17%;"action="/filter" method="post">
            <!-- <label>Search</label> -->
            
            <input name="date1" style="width:300px; height: 38px; text-align:center; "
                type="text" placeholder="From Date" onfocus="(this.type='date')" />
            <input name="date2" style="width:300px; height: 38px; text-align:center;"
                type="text" placeholder="To Date" onfocus="(this.type='date')" />
            <input type="submit" value="Filter" style=" height:40px; width: 120px; color: black;" name="filter" />
            
        </form>
        <div class="d-flex table-data">

            <table class="table table-striped table-bordered table-light" >
                <br>
                <thead style="color:white;">
                    <tr>
                        <th>S/No</th>
                        <th>ISSUE ID</th>
                        <th>LIB NO</th>
                        <th>NAME</th>
                        <th>BOOK ID</th>
                        <th>BOOK NAME</th>
                        <th>ISSUE DATE</th>
                        <th>DUE DATE</th>
                    </tr>
                </thead>
                <% if(data.length){ 
              for(var i = 0;i < data.length;i++) { %>
                <tbody id="tbody" style="color: black;">
                    <tr>
                        <td><%=(i+1)%></td>
                        <td><%=data[i].issueId%></td>
                        <td><%=data[i].lib_no%></td>
                        <td><%=data[i].name%></td>
                        <td><%=data[i].bookId%></td>
                        <td><%=data[i].bookname%></td>
                        <td><%=data[i].issuedate%></td>
                        <td><%=data[i].duedate%></td>
    
                    </tr>
    
                    <% }
          }else{ %>
                    <tr>
                        <td align="center" colspan="9">No History Found</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    </body>
    </html>
    <div class="container text-center">
        <div class="container">
        <div class="card bg-light" >
        <div class="col-md-10 col-sm-10 center" style="margin-left: 20%;" >
            <fieldset class="col-md-4 col-sm-8 col-xs-20">
<form action="/get-studentsByClass" method="post">
        <select required name="clas" class="form-control">
            <option disabled selected value>Class</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
            <option>11</option>
            <option>12</option>
            
        </select>
        <br>
        <button type="submit" class="btn btn-primary btn-block " name="byCompany">Students By CLass</button>
        <br>
    
</form>
</fieldset>
<fieldset class="col-md-4 col-sm-8 col-xs-20">
<form  action="/get-studentById" method="post">


<input  name="no" placeholder="Library No" type="text" class="form-control"/>	
<br>
<button type="submit" class="btn btn-primary btn-block " name="search">Search Student</button>
</form>
</fieldset>
<br>
<br>
                        </div>
                        </div>
                        </div>
                        </div>
                        <div class="d-flex table-data">

<table class="table table-striped table-bordered table-light" >
    <br>
       <thead  style="color:white; ">
    <tr>
        <th>S/No</th>
        <th>LIBRARY NO</th>
        <th>ROLL NO</th>
        <th>NAME</th>
        <th>CLASS</th>
        <th>SECTION</th>
        <th>GENDER</th>
        <th>EMAIL</th>
        
    </tr>
</thead>
  <% if(data.length){ 
      for(var i = 0;i < data.length;i++) { %>
        <tbody id="tbody" style="color: black;">
  <tr>
    <td><%=(i+1)%></td>
    <td><%=data[i].lib_no%></td>
    <td><%=data[i].roll_no%></td>
    <td><%=data[i].name%></td>
    <td><%=data[i].std%></td>
    <td><%=data[i].section%></td>
    <td><%=data[i].gender%></td>
    <td><%=data[i].email%></td>
    
  </tr>
  
  <% }
  }else{ %>
  <tr>
    <td align="center" colspan="8">No Student Found</td>
  </tr>
<% } %>
</tbody>
</table>
</div>
    
